generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               String       @id @default(uuid())
  name             String
  mail             String
  role             String
  date_birth       DateTime
  BorrowingHistory LendRecord[]
}

model LendRecord {
  id           String    @id @default(uuid())
  bookId       String
  userId       String
  created_at   DateTime  @default(now())
  deadline     DateTime
  returnedDate DateTime?
  book         Book      @relation(fields: [bookId], references: [id])
  user         User      @relation(fields: [userId], references: [id])

  @@index([bookId])
  @@index([userId])
}

model Book {
  id               String       @id @default(uuid())
  isbn             String
  title            String
  publication_year Int
  owner            String
  // MJ || Conken
  thumbnail_url    String?
  lendRecords      LendRecord[]
  book_tags        BookTag[]
}

model Tag {
  id        String    @id @default(uuid())
  label     String
  book_tags BookTag[]
}

model BookTag {
  id     String @id @default(uuid())
  bookId String
  tagId  String
  book   Book   @relation(fields: [bookId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])

  @@unique([bookId, tagId])
  @@index([tagId])
}
